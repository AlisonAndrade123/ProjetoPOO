<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="30.0"
      style="-fx-background-color: #00A60E;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.edu.ifpb.lojavirtual.controller.LoginController">
    <children>
        <Label text="SEJA BEM VINDO" textFill="WHITE">
            <font>
                <Font size="48.0"/>
            </font>
        </Label>
        <!-- Este é o painel de login. É um VBox para organizar os campos verticalmente.-->
        <VBox alignment="CENTER" maxWidth="800.0" spacing="20.0"
              style="-fx-background-color: #FFFFFF; -fx-background-radius: 15;">
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
            </padding>
            <children>
                <Label text="Realize seu login" textFill="#00a60e">
                    <font>
                        <Font name="System" size="36.0"/>
                    </font>
                </Label>

                <Label text="E-mail:" textFill="#00a60e">
                    <font>
                        <Font size="28.0"/>
                    </font>
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                </Label>

                <TextField fx:id="usernameField" prefHeight="50.0" promptText="seu.email@exemplo.com"
                           style="-fx-font-size: 24;"/>

                <Label text="Senha:" textFill="#00a60e">
                    <font>
                        <Font size="28.0"/>
                    </font>
                </Label>
                <PasswordField fx:id="passwordField" prefHeight="50.0" promptText="********"
                               style="-fx-font-size: 24;"/>

                <Button fx:id="loginButton" maxWidth="300.0" onAction="#handleLoginButtonAction" prefHeight="60.0"
                        style="-fx-background-color: #00A60E; -fx-background-radius: 10; -fx-text-fill: white;"
                        text="Entrar">
                    <font>
                        <Font size="28.0"/>
                    </font>
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="createAccountButton" maxWidth="300.0" onAction="#handleCreateAccountButtonAction"
                        prefHeight="60.0"
                        style="-fx-background-color: #00A60E; -fx-background-radius: 10; -fx-text-fill: white;"
                        text="Criar conta">
                    <font>
                        <Font size="28.0"/>
                    </font>
                </Button>
            </children>
        </VBox>
    </children>
</VBox>
