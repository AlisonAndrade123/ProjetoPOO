                    AnchorPane.leftAnchor="562.0" AnchorPane.rightAnchor="562.0" AnchorPane.topAnchor="14.0">
            <children>
                <TextField fx:id="searchTextField" layoutX="54.0" layoutY="2.0" prefHeight="48.0" prefWidth="731.0"
                           promptText="O que vocÃª quer comprar hoje?"
                           style="-fx-background-color: transparent; -fx-border-color: transparent;"
                           AnchorPane.bottomAnchor="-2.0" AnchorPane.leftAnchor="54.0" AnchorPane.rightAnchor="11.0"
                           AnchorPane.topAnchor="2.0">
                    <font>
                        <Font size="22.0"/>
                    </font>
                </TextField>
                <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="10.0" layoutY="8.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../imagens/lupa.png"/>
                    </image>
                </ImageView>
            </children>
        </AnchorPane>


        <ScrollPane fx:id="categoryScrollPane" hbarPolicy="AS_NEEDED" layoutY="80.0" prefHeight="72.0"
                    style="-fx-background-color: #FFFFFF; -fx-border-color: #00A60E; -fx-border-width: 0 0 2 0;"
                    vbarPolicy="NEVER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                    AnchorPane.topAnchor="80.0">
            <content>
                <HBox fx:id="categoryHBox" alignment="CENTER_LEFT" spacing="15.0" style="-fx-padding: 0 15 0 15;"/>
