                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="165.0">
            <content>
                <TilePane fx:id="productTilePane" alignment="TOP_LEFT" hgap="20.0" prefColumns="5"
                          prefTileHeight="400.0" prefTileWidth="345.0" style="-fx-padding: 20;" vgap="20.0"/>
            </content>
        </ScrollPane>
