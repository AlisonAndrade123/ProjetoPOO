<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!--
    <<< MUDANÇA PRINCIPAL AQUI >>>
    1. Trocamos prefHeight/prefWidth por maxHeight/maxWidth para impedir que ele se estique.
    2. Adicionamos um 'style' para dar a ele a aparência de um card flutuante com sombra.
-->
<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="750.0" prefWidth="800.0" spacing="30.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 20, 0, 0, 5);" xmlns="http://javafx.com/javafx/21.0.3" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pooprojeto.controller.CadastrarProdutoController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Cadastra produtos" textFill="#00A60E">
            <font>
                <Font name="System Bold" size="40.0" />
            </font>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Label>

        <!-- O resto do seu FXML, que já está excelente, continua o mesmo -->

        <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="700.0" spacing="20.0">
            <children>
                <Label text="Nome:" prefWidth="120.0">
                    <font><Font size="24.0" /></font>
                </Label>
                <TextField fx:id="nomeTextField" promptText="Insira o nome do produto..." style="-fx-background-color: transparent; -fx-border-color: #CCCCCC; -fx-border-width: 0 0 2 0;" HBox.hgrow="ALWAYS">
                    <font><Font size="20.0" /></font>
                </TextField>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="700.0" spacing="20.0">
            <children>
                <Label text="Categoria:" prefWidth="120.0">
                    <font><Font size="24.0" /></font>
                </Label>
                <ComboBox fx:id="categoriaComboBox" prefHeight="45.0" promptText="Selecione uma categoria..." HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="700.0" spacing="20.0">
            <children>
                <Label text="Imagem:" prefWidth="120.0">
                    <font><Font size="24.0" /></font>
                </Label>
                <TextField fx:id="imagemTextField" editable="false" promptText="Nenhum arquivo selecionado..." style="-fx-background-color: transparent; -fx-border-color: #CCCCCC; -fx-border-width: 0 0 2 0;" HBox.hgrow="ALWAYS">
                    <font><Font size="20.0" /></font>
                </TextField>
                <Button fx:id="procurarImagemButton" mnemonicParsing="false" onAction="#handleProcurarImagem" prefHeight="50.0" prefWidth="120.0" style="-fx-background-color: #F43C3C; -fx-background-radius: 8;" text="Procurar" textFill="WHITE">
                    <font><Font size="18.0" /></font>
                </Button>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="700.0" spacing="20.0">
            <children>
                <Label text="Quantidade:" prefWidth="120.0">
                    <font><Font size="24.0" /></font>
                </Label>
                <TextField fx:id="quantidadeTextField" promptText="Insira a quantidade..." style="-fx-background-color: transparent; -fx-border-color: #CCCCCC; -fx-border-width: 0 0 2 0;" HBox.hgrow="ALWAYS">
                    <font><Font size="20.0" /></font>
                </TextField>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="700.0" spacing="20.0">
            <children>
                <Label text="Descrição:" prefWidth="120.0">
                    <font><Font size="24.0" /></font>
                </Label>
                <TextField fx:id="descricaoTextField" promptText="Insira a descrição..." style="-fx-background-color: transparent; -fx-border-color: #CCCCCC; -fx-border-width: 0 0 2 0;" HBox.hgrow="ALWAYS">
                    <font><Font size="20.0" /></font>
                </TextField>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="700.0" spacing="20.0">
            <children>
                <Label text="Preço:" prefWidth="120.0">
                    <font><Font size="24.0" /></font>
                </Label>
                <TextField fx:id="precoTextField" promptText="Insira o preço..." style="-fx-background-color: transparent; -fx-border-color: #CCCCCC; -fx-border-width: 0 0 2 0;" HBox.hgrow="ALWAYS">
                    <font><Font size="20.0" /></font>
                </TextField>
            </children>
        </HBox>
        <Button fx:id="finalizarCadastroButton" mnemonicParsing="false" onAction="#handleFinalizarCadastro" prefHeight="60.0" prefWidth="350.0" style="-fx-background-color: #00A60E; -fx-background-radius: 10; -fx-cursor: hand;" text="Finalizar cadastro" textFill="WHITE">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Button>
    </children>
</VBox>