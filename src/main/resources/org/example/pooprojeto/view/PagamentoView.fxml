<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane style="-fx-background-color: #F0F2F5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="1920"
            prefHeight="1080" fx:controller="org.example.pooprojeto.controller.PagamentoController">
    <children>
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER" spacing="30.0">
                    <children>
                        <VBox fx:id="paymentOptionsVBox" spacing="20.0" HBox.hgrow="ALWAYS" maxWidth="500">
                            <children>
                                <Label text="Como vocÃª prefere pagar?" fx:id="tituloLabel" />

                                <HBox fx:id="opcoesPagamentoHBox" spacing="10.0" alignment="CENTER_LEFT" />

                                <StackPane fx:id="painelMetodoPagamento" alignment="TOP_LEFT" style="-fx-border-color: #E0E0E0; -fx-background-color: white; -fx-border-radius: 8; -fx-background-radius: 8;" minHeight="250.0">
                                </StackPane>

                            </children>
                        </VBox>

                        <VBox fx:id="resumoVBox" spacing="15.0" minWidth="350.0" prefWidth="350.0">
                            <children>
                                <Label fx:id="resumoTituloLabel" text="RESUMO DO PEDIDO" />
                                <Separator prefWidth="200.0" />
                                <HBox><children><Label text="Subtotal:" /><Region HBox.hgrow="ALWAYS" /><Label fx:id="subtotalLabel" text="R$ 0,00" /></children></HBox>
                                <HBox><children><Label text="Frete:" /><Region HBox.hgrow="ALWAYS" /><Label fx:id="freteLabel" text="R$ 0,00" /></children></HBox>
                                <Separator prefWidth="200.0" />
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <Label fx:id="totalTituloLabel" text="Total:" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Label fx:id="totalLabel" text="R$ 150,00" />
                                    </children>
                                </HBox>
                                <Region VBox.vgrow="ALWAYS" minHeight="20"/>
                                <VBox fx:id="processamentoBox" alignment="CENTER" managed="false" visible="false" spacing="10">
                                    <children>
                                        <Label text="Processando pagamento..." />
                                        <ProgressIndicator />
                                    </children>
                                </VBox>
                                <Button fx:id="confirmarPagamentoButton" onAction="#handleConfirmarPagamento" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Confirmar Pagamento" />
                            </children>
                        </VBox>
                    </children>
                    <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>