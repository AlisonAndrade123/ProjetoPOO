<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" style="-fx-background-color: #00A60E;" xmlns="http://javafx.com/javafx/21.0.3" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pooprojeto.controller.ProdutosController">
    <children>
        <!-- SEU CONTEÚDO ORIGINAL (Header, Categorias, Produtos) -->
        <Button fx:id="profileButton" layoutX="9.0" layoutY="9.0" mnemonicParsing="false" onAction="#handleProfileButtonAction" prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: transparent;" AnchorPane.leftAnchor="9.0" AnchorPane.topAnchor="9.0">
            <graphic>
                <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                    <image><Image url="@../images/perfil_icon.png" /></image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="cartButton" mnemonicParsing="false" onAction="#handleCartButtonAction" prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: transparent;" AnchorPane.rightAnchor="9.0" AnchorPane.topAnchor="9.0">
            <graphic>
                <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                    <image><Image url="@../Imagens/carrinho-de-compras.png" /></image>
                </ImageView>
            </graphic>
        </Button>
        <AnchorPane style="-fx-background-color: #FFFFFF; -fx-border-radius: 15; -fx-background-radius: 15;" AnchorPane.leftAnchor="75.0" AnchorPane.rightAnchor="75.0" AnchorPane.topAnchor="16.0">
            <children>
                <TextField fx:id="searchTextField" promptText="O que você quer comprar hoje?" style="-fx-background-color: transparent; -fx-border-color: transparent;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="45.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <font><Font size="22.0" /></font>
                </TextField>
                <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="10.0" layoutY="8.0" pickOnBounds="true" preserveRatio="true">
                    <image><Image url="@../Imagens/lupa.png" /></image>
                </ImageView>
            </children>
        </AnchorPane>
        <ScrollPane fx:id="categoryScrollPane" hbarPolicy="AS_NEEDED" prefHeight="72.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #00A60E; -fx-border-width: 0 0 2 0;" vbarPolicy="NEVER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="80.0">
            <content>
                <HBox fx:id="categoryHBox" alignment="CENTER_LEFT" spacing="15.0" style="-fx-padding: 0 15 0 15;" />
            </content>
        </ScrollPane>
        <ScrollPane hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-padding: 0;" vbarPolicy="AS_NEEDED" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="165.0">
            <content>
                <TilePane fx:id="productTilePane" alignment="TOP_LEFT" hgap="20.0" prefColumns="5" prefTileHeight="400.0" prefTileWidth="345.0" style="-fx-padding: 20;" vgap="20.0" />
            </content>
        </ScrollPane>

        <!-- MUDANÇA: COMPONENTES DO ALERTA PERSONALIZADO ADICIONADOS AO FINAL DO ANCHORPANE -->

        <!-- Painel de sobreposição para escurecer o fundo. Começa invisível. -->
        <!-- As âncoras (0.0 em todos os lados) fazem ele ocupar a tela inteira. -->
        <Pane fx:id="overlayPane" style="-fx-background-color: rgba(0, 0, 0, 0.4);" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />

        <!-- O nosso "alerta personalizado". Começa invisível e centralizado no AnchorPane. -->
        <VBox fx:id="customAlertBox" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="400.0" spacing="20.0" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 20, 0, 0, 5);" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label fx:id="customAlertTitle" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Título do Alerta" />
                <Label fx:id="customAlertMessage" alignment="CENTER" text="Mensagem do alerta vai aqui." textAlignment="CENTER" wrapText="true" />
                <Button fx:id="customAlertButton" mnemonicParsing="false" onAction="#handleCustomAlertOK" prefWidth="100.0" style="-fx-background-color: #00A60E; -fx-text-fill: white; -fx-font-weight: bold;" text="OK" />
            </children>
        </VBox>
    </children>
</AnchorPane>